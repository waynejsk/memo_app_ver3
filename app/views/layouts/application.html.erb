<!DOCTYPE html>
<html>
  <head>
    <title>MemoAppVer3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <a class='navbar-brand' href='/top'>MemoApp</a>
      <ul class='navbar-nav ml-auto'>
        <% if current_user %>
          <% if current_user.admin? %>
            <li class='nav-item'><%= link_to 'ユーザー', admin_users_path, class: 'nav-link' %></li>
          <% end %>
          <li class='nav-item'><%= link_to 'メモ一覧', memos_path, class: 'nav-link' %></li>
          <li class ='nav-item'><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li class='nav-item'><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </nav>

    <div class='container'>
      <% if flash.notice.present? %>
        <div class='alert alert-success'>
          <%= flash.notice %>
        </div>
      <% end %>
      <% if flash.alert.present? %>
        <div class='alert alert-danger'>
          <%= flash.alert %>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <div>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
